<h1>Coberturas</h1>
<ul class="small-block-grid-1 large-block-grid-4">
	<% @events.each do |event| %>
	<li>
		<%= link_to edit_admin_event_path(event) do %>
		<div class="row">
			<div>
				<span><%= event.name %></span>
			</div>
			<div class="large-12 columns">
				<%= unless event.cover_photo.nil? then
          image_tag(image_event_photo_url(event.cover_photo),
				:alt => 'image', 'data-caption' => 'CAPTION')
        end %>
			</div>
			<div>
				<%= event.event_date %>
			</div>
		</div>
		<% end %>

		<div class="row">
			<div class="large-12 columns">
				<%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %>
			</div>
		</div>
	</li>
	<% end %>
</ul>
<br />

<%= link_to 'Novo', new_admin_event_path %>
