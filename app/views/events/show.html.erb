<div class="row display">
	<div class="large-9 columns">
		<h1><%= @event.name %></h1>
	</div>
	<div class="large-3 columns">
		<h1 class="subheader"><%= l @event.event_date %></span>
	</div>
</div>

<p id="notice">
	<%= notice %>
</p>

<p>
	<b>Description:</b>
	<%= @event.description %>
</p>

<div class="switch">
	<input id="rad-before" name="switch-before-after" type="radio" onclick="switchBeforeAfter(this)" >
	<label for="rad-before" >Antes</label>

	<input id="rad-after" name="switch-before-after" type="radio" onclick="switchBeforeAfter(this)" checked>
	<label for="rad-after" onclick="">Depois</label>
	<span class="switch-lever"><%= image_tag("double_direction_arrow.png") %></span>
</div>

<div class="row">
	<div class="large-12 columns">
		<ul class="small-block-grid-1 large-block-grid-5 before-after-list" >
			<% @event.event_photos.each do |ep| %>
			<li class="before-item" style="display:none;">
				<%= image_tag(before_image_event_photo_url(ep), :alt => ep.before_file_name) %>
			</li>
			<li class="after-item">
				<%= image_tag(after_image_event_photo_url(ep), :alt => ep.after_file_name) %>
			</li>
			<% end %>
		</ul>
	</div>
</div>

<%= link_to 'Back', events_path, :class => "button" %>
